{
  "name": "Firebase Vue",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {
      "omzPlugins": "https://github.com/z-shell/F-Sy-H https://github.com/zsh-users/zsh-autosuggestions",
      "plugins": "git F-Sy-H zsh-autosuggestions"
    },
    "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {}
  },
  "postCreateCommand": {
    "setupFolderPrivileges": "sudo chown --recursive node .pnpm-store node_modules",
    "installDependencies": "pnpm install"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "antfu.iconify",
        "antfu.unocss",
        "toba.vsfire",
        "Vue.volar"
      ],
      "settings": {
        "files.encoding": "utf8",
        "files.eol": "\n",
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true,
        "editor.wordWrapColumn": 120,
        "editor.rulers": [
          80,
          120
        ],
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": true,
          "source.fixAll": false,
          "source.organizeImports": false
        },
        "editor.formatOnSave": false,
        "eslint.codeActionsOnSave.mode": "problems",
        "eslint.quiet": false,
        "eslint.validate": [
          "html",
          "json",
          "json5",
          "jsonc",
          "markdown",
          "typescript",
          "typescriptreact",
          "vue",
          "yaml"
        ],
        "errorLens.excludeBySource": [
          "cSpell",
          "eslint"
        ],
        "errorLens.fontStyleItalic": true,
        "errorLens.fontWeight": "100",
        "unocss.root": [
          "./apps/app"
        ]
      }
    }
  }
}
